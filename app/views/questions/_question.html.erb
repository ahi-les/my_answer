<div class="mb-sm">
	<%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>


  <div>
    <div class="mt">
      <%= link_to 'Редактировать вопрос', edit_question_path(question) %>
    </div>

    <div class="mt">
      <%= button_to 'Удалить вопрос', question_path(question), method: :delete, class: 'button button_main' %>
    </div>
  </div>
</div>