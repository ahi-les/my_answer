<div class="container">
  <div class="mt">
    <%= link_to 'Создать новый вопрос', new_question_path, class: 'button button_main' %>
  </div>

  <p>
    <%= render 'form', question: @question %>
  </p>

</div>

<div class="container mt-sm">
	<h1 class="title-lg mb">
   <%= @questions.count %>
   <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %> 
  </h1>
</div>
  <% @questions.each do |question| %>
    <div class="container mt-sm">
  	 <%= render question %>
    </div>
  <% end %>





